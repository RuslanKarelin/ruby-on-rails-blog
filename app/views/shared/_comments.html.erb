<% if @model.comments.present? %>
  <div class="section-row">
    <div class="section-title">
      <h3 class="title"><%= @model.comments.count %> Comments</h3>
    </div>
    <div class="post-comments">
      <%= render partial: 'shared/comment', locals: {collection: @model.comments} %>
    </div>
  </div>
<% else %>
  <div class="section-row">
    <div class="post-comments">
    </div>
  </div>
<% end %>