      <h2 class="title">Categories</h2>
    </div>
    <div class="category-widget">
      <ul>
        <%= render partial: 'shared/blocks/category_item_list', collection: @categories, as: :category, cached: true %>
      </ul>
    </div>
  </div>
<% end %>