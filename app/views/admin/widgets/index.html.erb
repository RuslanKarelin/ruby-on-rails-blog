<div class="row">
  <div class="col-12">
    <%= link_to 'Create widget', new_admin_widget_path, role: 'button', class: 'mb-4 btn btn-primary' %>
  </div>
</div>
<div class="card">
  <div class="card-body">
    <div id="jsGrid1" class="jsgrid">
      <table class="jsgrid-table">
        <tr class="jsgrid-header-row">
          <th style="width:50px;" class="jsgrid-header-cell">id</th>
          <th class="jsgrid-header-cell">wname</th>
          <th class="jsgrid-header-cell">name</th>
          <th class="jsgrid-header-cell">position</th>
          <th class="jsgrid-header-cell">sort</th>
          <th style="width:80px;" class="jsgrid-header-cell"></th>
        </tr>
        <%= render partial: 'admin/widgets/widget_item_list', collection: @model, as: 'widget' %>
      </table>
      <%= will_paginate @model, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>